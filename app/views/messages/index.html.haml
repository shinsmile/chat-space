.leftContents
  .leftContents__leftHeader
    %h3
      = current_user.name
    .leftContents__leftHeader--headerLists
      %ul
        %li.memo
          = link_to new_group_path do
            %i.fas.fa-edit
        %li.setting
          =link_to edit_user_path(current_user) do
            %i.fas.fa-cog

  .leftContents__groups
    = render partial: "group"

.rightContents
  .rightContents__rightHeader
    = link_to("Edit", '#', class: "Edit")

    %h3.headerName Sampleグループ
    %p.headerMember Member: ryosukemaehira
  .rightContents__messages
    = render partial: "message"
  .rightContents__form
    %input{name: "title", size: "40", value: "type a message"}
    .rightContents__form--uploadImages
      =link_to root_path do
        %i.fas.fa-image
    %input{type: "submit", value: "send"}
